VITE_AUTH_ENDPOINT=/api/auth
VITE_POSTS_ENDPOINT=/api/posts
VITE_MARKETPLACE_ENDPOINT=/api/marketplace
VITE_MESSAGES_ENDPOINT=/api/messages

